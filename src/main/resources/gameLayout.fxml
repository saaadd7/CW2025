<?xml version="1.0" encoding="UTF-8"?>
<?import com.comp2042.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<Pane fx:id="viewRoot"
      fx:controller="com.comp2042.GuiController"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      style="-fx-background-color: #333333;">

    <BorderPane fx:id="gameBoard" styleClass="gameBoard" layoutX="180" layoutY="180">
        <center>
            <GridPane fx:id="gamePanel" hgap="1" vgap="1"/>
        </center>
    </BorderPane>

    <GridPane fx:id="brickPanel" vgap="1" hgap="1" layoutX="180" layoutY="180"/>

    <VBox alignment="CENTER" layoutX="-10" layoutY="80" prefWidth="600" style="-fx-padding: 20 0 0 0;">
        <Label fx:id="scoreLabel"
               text="Score: 0"
               prefWidth="200"
               prefHeight="60"
               alignment="CENTER"
               style="
                   -fx-background-color: black;
                   -fx-text-fill: yellow;
                   -fx-font-family: 'digital';
                   -fx-font-size: 28px;
                   -fx-border-color: white;
                   -fx-border-width: 2;
                   -fx-border-radius: 10;
                   -fx-background-radius: 10;
               "/>
    </VBox>

    <VBox layoutX="450" layoutY="300" spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 10 0;">
        <VBox layoutY="200" spacing="5" alignment="CENTER"> <!-- Center the VBox itself -->
            <Label text="NEXT 3 PIECES"
                   style="-fx-text-fill: white;
                      -fx-font-size: 18px;
                      -fx-font-weight: bold;" />
            <VBox spacing="6" alignment="CENTER"> <!-- Ensure alignment of the GridPanes -->
                <StackPane style="-fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 4; -fx-padding: 4;">
                    <GridPane fx:id="nextGrid1" hgap="0" vgap="0" prefWidth="10" prefHeight="10" alignment="CENTER"/>
                </StackPane>

                <StackPane style="-fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 4; -fx-padding: 4;">
                    <GridPane fx:id="nextGrid2" hgap="0" vgap="0" prefWidth="20" prefHeight="20" alignment="CENTER"/>
                </StackPane>

                <StackPane style="-fx-border-color: white; -fx-border-width: 2; -fx-border-radius: 4; -fx-padding: 4;">
                    <GridPane fx:id="nextGrid3" hgap="0" vgap="0" prefWidth="30" prefHeight="30" alignment="CENTER"/>
                </StackPane>
            </VBox>
        </VBox>
    </VBox>

    <VBox alignment="CENTER" layoutX="0" layoutY="680" prefWidth="600" style="-fx-padding: 20 0 20 0;">
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="pauseButton" text="Pause" prefWidth="80" onAction="#pauseGame"/>
            <Button text="Restart" prefWidth="80" onAction="#newGame"/>
            <Button text="Main Menu" prefWidth="100" onAction="#backToMainMenu"/>
        </HBox>
    </VBox>

    <Group fx:id="groupNotification" layoutX="0" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</Pane>