<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox alignment="CENTER" spacing="10.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.comp2042.ui.SettingsController">
    <Label text="Game Settings" style="-fx-font-size: 20pt; -fx-text-fill: red;"/>

    <Button fx:id="soundToggleButton" text="Toggle Sounds" onAction="#toggleSounds"/>

    <Button text="Back to Main Menu" onAction="#closeSettings"/>
</VBox>