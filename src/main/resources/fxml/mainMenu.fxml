<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.comp2042.ui.MainMenuController"
            prefWidth="600" prefHeight="800">

    <ImageView fitWidth="600" fitHeight="800" preserveRatio="false">
        <image>
            <Image url="@../images/IMG_1032.JPG"/>
        </image>
    </ImageView>

    <Label text="Welcome to Tetris"
           layoutX="150"
           layoutY="120"
           prefWidth="300"
           prefHeight="60"
           alignment="CENTER"
           style="-fx-background-color: black;
                  -fx-text-fill: red;
                  -fx-font-size: 32px;
                  -fx-font-weight: bold;"/>

    <Button fx:id="startButton"
            text="Start Game"
            layoutX="230"
            layoutY="600"
            prefWidth="140"
            prefHeight="40"
            onAction="#startGame"/>

    <Button fx:id="settingsButton"
            text="Settings"
            layoutX="230"
            layoutY="650"
            prefWidth="140"
            prefHeight="40"/>

    <Button fx:id="helpButton"
            text="Help"
            onAction="#handleHelpButton"
            layoutX="230"
            layoutY="700"
            prefWidth="140"
            prefHeight="40"/>

    <AnchorPane fx:id="helpOverlay"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                style="-fx-background-color: rgba(0, 0, 0, 0.8);"
                visible="false">

        <VBox alignment="TOP_CENTER"
              layoutX="100"
              layoutY="100"
              prefWidth="400"
              prefHeight="600"
              spacing="15"
              style="-fx-background-color: #333333; -fx-border-color: red; -fx-border-width: 3; -fx-padding: 20;">

            <Label text="GAME CONTROLS"
                   style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;">
                <VBox.margin>
                    <Insets bottom="10"/>
                </VBox.margin>
            </Label>

            <Label text="Move Left: Left Arrow ( ← )" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            <Label text="Move Right: Right Arrow ( → )" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            <Label text="Rotate Clockwise: Up Arrow ( ↑ ) or X" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            <Label text="Soft Drop (Speed up): Down Arrow ( ↓ )" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            <Label text="Hard Drop (Place instantly): Spacebar" style="-fx-text-fill: white; -fx-font-size: 18px;"/>


            <Button text="Close"
                    onAction="#handleCloseHelp"
                    prefWidth="100"
                    prefHeight="30">
                <VBox.margin>
                    <Insets top="30"/>
                </VBox.margin>
            </Button>

        </VBox>

    </AnchorPane>

</AnchorPane>